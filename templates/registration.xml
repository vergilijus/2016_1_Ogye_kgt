<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="col-lg-4 col-lg-offset-4">
        <div class="menu">
        <div class="menu__subtitle">Registration</div>
            <form class="inputForm">
                <div class="form-group">
                    <input type="email" class="form-control inputForm__element" placeholder="Email" required=""/>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control inputForm__element" placeholder="Username" required=""/>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control inputForm__element" placeholder="Password" required=""/>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control inputForm__element" placeholder="Confirm password" required=""/>
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" value="remember-me"/>
                        Remember me
                    </label>
                </div>
                <button data-hover-text="REGISTER" class="menu__coralButton-hover btn-success" type="submit">SIGN IN</button>
            </form>
            <a href="#main" data-hover-text="MAIN MENU" class="menu__coralButton-hover">GO BACK</a>
        </div>
    </div>
    <!--todo: модификатор одним подчеркиванием-->

</fest:template>
